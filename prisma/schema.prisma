generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id                  String    @id
  shop                String
  state               String
  isOnline            Boolean   @default(false)
  scope               String?
  expires             DateTime?
  accessToken         String
  userId              BigInt?
  firstName           String?
  lastName            String?
  email               String?
  accountOwner        Boolean   @default(false)
  locale              String?
  collaborator        Boolean?  @default(false)
  emailVerified       Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model Settings {
  id                    String  @id @default(uuid())
  shop                  String  @unique
  enabled               Boolean @default(false)
  enablePreorderAll     Boolean @default(false)
  buttonLabel           String?
  preorderMessage       String?
  messagePosition       String?
  badgeEnabled          Boolean @default(true)
  badgeText             String?
  badgeShape            String?
  inventoryManagement   Boolean @default(false)
  orderTag              String?
  syncInventory         Boolean @default(false)
  hideBuyNow            Boolean @default(false)
  badgesOnCollection    Boolean @default(false)
  badgeOnProduct        Boolean @default(false)
  buttonsOnCollection   Boolean @default(false)
  quickviewSupport      Boolean @default(false)
  cartLabelText         String?
  cartLabelKey          String?
  showAdditionalButtons Boolean @default(false)
  preventOrdering       Boolean @default(false)
  insufficientStockMsg  String?
  notifyCustomers       Boolean @default(false)
  partOrderMsg          String?
  mixedCartWarning      Boolean @default(false)
  discountType          String?
  startDate             String?
  startTime             String?
  endDate               String?
  endTime               String?
  shopTimezone          String?
  selectedTheme         String?
  selectors             String?
  monthlyChargeLimit    String?
  bccMe                 Boolean @default(false)
  bccEmail              String?
  emailSubject          String?
  emailHeader           String?
  emailLineItem         String?
  emailLineFooter       String?
  senderEmail           String?
}

model PreorderProduct {
  id             String            @id @default(uuid())
  shop           String
  productId      String            @unique
  title          String
  handle         String
  image          String?
  status         String            @default("Enabled")
  customSettings Boolean           @default(false)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  variants       PreorderVariant[]

  @@index([shop])
}

model PreorderVariant {
  id        String          @id @default(uuid())
  variantId String          @unique
  title     String
  price     String?
  inventory Int             @default(0)
  status    String          @default("Enabled")
  productId String
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  product   PreorderProduct @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
}
